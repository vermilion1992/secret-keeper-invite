{
  "identity": {
    "id": "ema",
    "label": "EMA (Exponential Moving Average)",
    "category": "Trend",
    "tier": "CORE",
    "tags": ["Trend", "Moving Average", "Support/Resistance", "Filter"]
  },
  "docs": {
    "blurb": "The Exponential Moving Average (EMA) weights recent prices more heavily, responding faster to trend changes than SMA.",
    "longSummary": "EMA is a smoothing technique that emphasizes recent price action via an exponential weighting factor. Short EMAs (e.g., 9/12) react quickly and are often used for momentum entries, while longer EMAs (e.g., 50/200) help define the primary trend and dynamic support/resistance. Common tactics include price/EMA crosses, dual-EMA crossovers, and stacked EMAs for regime confirmation. EMA can serve as a filter to keep trades aligned with higher-timeframe direction.",
    "mathSummary": "EMAₙ(t) = α·Price(t) + (1−α)·EMAₙ(t−1), where α = 2 / (n + 1).",
    "references": [
      {
        "label": "Investopedia — Exponential Moving Average (EMA)",
        "url": "https://www.investopedia.com/terms/e/ema.asp"
      }
    ]
  },
  "params": [
    {
      "key": "length",
      "label": "EMA Length",
      "type": "integer",
      "default": 50,
      "min": 2,
      "max": 500,
      "step": 1,
      "unit": "bars"
    },
    {
      "key": "source",
      "label": "Price Source",
      "type": "enum",
      "options": ["close", "open", "high", "low", "hl2", "hlc3", "ohlc4"],
      "default": "close"
    }
  ],
  "outputs": ["ema"],
  "supportedOperators": [">", ">=", "<", "<=", "==", "crosses_above", "crosses_below", "rising", "falling", "within", "outside"],
  "signals": [
    {
      "id": "price_above_ema",
      "label": "Price Above EMA",
      "when": [
        { "left": "price", "op": ">", "right": "ema" }
      ]
    },
    {
      "id": "bull_price_cross",
      "label": "Bullish Price Crosses Above EMA",
      "when": [
        { "left": "price", "op": "crosses_above", "right": "ema" }
      ]
    },
    {
      "id": "bear_price_cross",
      "label": "Bearish Price Crosses Below EMA",
      "when": [
        { "left": "price", "op": "crosses_below", "right": "ema" }
      ]
    }
  ],
  "ui": {
    "tooltips": {
      "_indicator": "EMA smooths price with exponential weighting for faster trend detection than SMA.",
      "length": "Bars used to compute the EMA. Shorter = faster, more noise; longer = smoother, slower.",
      "source": "Price series used to compute the EMA."
    }
  },
  "constraints": {
    "recommendedTimeframes": ["5m", "15m", "1h", "4h", "1D"],
    "notes": "For volatile pairs or lower timeframes, consider longer lengths or additional filters."
  },
  "examples": [
    { "name": "EMA 50 Trend-Follow (Price Cross)", "presetRef": "ema_normal_trend_50" },
    { "name": "EMA 9/21 Crossover Momentum", "presetRef": "ema_normal_cross_9_21" },
    { "name": "EMA 200 Regime Filter", "presetRef": "ema_normal_filter_200" },
    { "name": "EMA Hero: Breakout + RSI Confirm", "presetRef": "ema_hero_breakout_rsi" },
    { "name": "EMA Hero: Momentum Stack (9/21/50)", "presetRef": "ema_hero_stack_momentum" },
