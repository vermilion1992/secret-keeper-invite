{
  "identity": {
    "id": "vwma",
    "label": "VWMA (Volume-Weighted Moving Average)",
    "category": "Trend",
    "tier": "CORE",
    "tags": ["Trend", "Moving Average", "Volume-Weighted", "Support/Resistance", "Filter"]
  },
  "docs": {
    "blurb": "The Volume-Weighted Moving Average (VWMA) weights price by traded volume, emphasizing levels formed on heavier participation.",
    "longSummary": "VWMA gives more influence to bars with higher volume, often tracking trend strength better than equal-weighted averages. It can help distinguish high-participation moves from low-volume drift and is commonly used for price/VWMA cross entries, dual-VWMA crossovers, and as a dynamic support/resistance guide. In trending markets, shorter VWMAs react quickly while longer VWMAs serve as regime filters. Pairing VWMA with momentum or volatility filters may reduce whipsaws on fast charts.",
    "mathSummary": "VWMAₙ(t) = Σ_{i=0..n−1}[Price(t−i)·Vol(t−i)] ÷ Σ_{i=0..n−1}[Vol(t−i)].",
    "references": [
      {
        "label": "Investopedia — Moving Average (MA)",
        "url": "https://www.investopedia.com/terms/m/movingaverage.asp"
      },
      {
        "label": "Investopedia — Volume-Weighted Average Price (VWAP)",
        "url": "https://www.investopedia.com/terms/v/vwap.asp"
      }
    ]
  },
  "params": [
    {
      "key": "length",
      "label": "VWMA Length",
      "type": "integer",
      "default": 50,
      "min": 2,
      "max": 500,
      "step": 1,
      "unit": "bars"
    },
    {
      "key": "priceSource",
      "label": "Price Source",
      "type": "enum",
      "options": ["close", "open", "high", "low", "hl2", "hlc3", "ohlc4"],
      "default": "close"
    },
    {
      "key": "volumeField",
      "label": "Volume Field",
      "type": "enum",
      "options": ["volume"],
      "default": "volume"
    }
  ],
  "outputs": ["vwma"],
  "supportedOperators": [">", ">=", "<", "<=", "==", "crosses_above", "crosses_below", "rising", "falling", "within", "outside"],
  "signals": [
    {
      "id": "bull_price_cross",
      "label": "Bullish Price Crosses Above VWMA",
      "when": [
        { "left": "price", "op": "crosses_above", "right": "vwma" }
      ]
    },
    {
      "id": "bear_price_cross",
      "label": "Bearish Price Crosses Below VWMA",
      "when": [
        { "left": "price", "op": "crosses_below", "right": "vwma" }
      ]
    }
  ],
  "ui": {
    "tooltips": {
      "_indicator": "VWMA weights price by volume, highlighting levels formed with stronger participation.",
      "length": "Lookback for the volume-weighted average. Shorter = faster, noisier; longer = smoother.",
      "priceSource": "Price input used in the VWMA numerator.",
      "volumeField": "Volume series used as weights."
    }
  },
  "constraints": {
    "recommendedTimeframes": ["5m", "15m", "1h", "4h", "1D"],
    "notes": "On illiquid symbols, VWMA may behave erratically; consider longer lengths or additional filters."
  },
  "examples": [
    { "name": "VWMA 50 Trend-Follow (Price Cross)", "presetRef": "vwma_normal_trend_50" },
    { "name": "VWMA 20 Pullback in VWMA50 Uptrend", "presetRef": "vwma_normal_pullback_20_50" },
    { "name": "VWMA 200 Regime Filter", "presetRef": "vwma_normal_filter_200" },
    { "name": "VWMA Hero: Breakout + RSI Confirm", "presetRef": "vwma_hero_breakout_rsi" },
    { "name": "VWMA Hero: Momentum Stack (20/50/200)", "presetRef": "vwma_hero_stack_momentum" },
    { "name": "VWMA Hero: Pullback + MTF Align", "presetRef": "vwma_hero_pullback_mtf" }
  ],
  "riskTemplates": {
    "atrStop": {
      "enabledDefault": false,
      "tooltip": "Places stop a multiple of ATR from entry.",
      "params": { "atrPeriod": 14, "atrMult": 1.6 }
    },
    "trailingTP": {
      "enabledDefault": false,
      "tooltip": "Locks in profits with a trailing take-profit.",
      "params": { "type": "percent", "percent": 0.9 }
    },
    "breakeven": {
      "enabledDefault": false,
      "tooltip": "Moves stop to entry after a defined unrealized gain.",
      "params": { "triggerPercent": 1.1, "offsetPercent": 0.05 }
    },
    "timeStop": {
      "enabledDefault": false,
      "tooltip": "Exits after a fixed number of bars.",
      "params": { "maxBars": 120 }
    }
  },
