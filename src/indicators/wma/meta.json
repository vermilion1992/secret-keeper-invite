{
  "identity": {
    "id": "wma",
    "label": "WMA (Weighted Moving Average)",
    "category": "Trend",
    "tier": "CORE",
    "tags": ["Trend", "Moving Average", "Support/Resistance", "Filter"]
  },
  "docs": {
    "blurb": "The Weighted Moving Average (WMA) gives more weight to recent prices than older ones, improving responsiveness over SMA.",
    "longSummary": "WMA is a linear-weighted moving average where newer prices receive higher weights. This makes WMA more responsive to recent changes than a simple average, while remaining smoother than very short EMAs. Traders use price/WMA crosses, dual-WMA crossovers, and WMA stacks to define trend, pullback entries, and regime filters. WMA can also serve as a confirmation layer alongside volatility or momentum indicators to reduce whipsaws.",
    "mathSummary": "WMAₙ(t) = [Σ_{i=1..n}(i · Price(t−n+i))] / [n(n+1)/2].",
    "references": [
      {
        "label": "Investopedia — Weighted Moving Average (WMA)",
        "url": "https://www.investopedia.com/terms/w/wma.asp"
      }
    ]
  },
  "params": [
    {
      "key": "length",
      "label": "WMA Length",
      "type": "integer",
      "default": 50,
      "min": 2,
      "max": 500,
      "step": 1,
      "unit": "bars"
    },
    {
      "key": "source",
      "label": "Price Source",
      "type": "enum",
      "options": ["close", "open", "high", "low", "hl2", "hlc3", "ohlc4"],
      "default": "close"
    }
  ],
  "outputs": ["wma"],
  "supportedOperators": [">", ">=", "<", "<=", "==", "crosses_above", "crosses_below", "rising", "falling", "within", "outside"],
  "signals": [
    {
      "id": "bull_price_cross",
      "label": "Bullish Price Crosses Above WMA",
      "when": [
        { "left": "price", "op": "crosses_above", "right": "wma" }
      ]
    },
    {
      "id": "bear_price_cross",
      "label": "Bearish Price Crosses Below WMA",
      "when": [
        { "left": "price", "op": "crosses_below", "right": "wma" }
      ]
    }
  ],
  "ui": {
    "tooltips": {
      "_indicator": "WMA linearly weights recent prices more, improving responsiveness to trend shifts.",
      "length": "Number of bars included. Longer = smoother, slower; shorter = faster, noisier.",
      "source": "Price input used to compute the WMA."
    }
  },
  "constraints": {
    "recommendedTimeframes": ["5m", "15m", "1h", "4h", "1D"],
    "notes": "For volatile markets, consider longer lengths or add a secondary trend filter."
  },
  "examples": [
    { "name": "WMA 50 Trend-Follow (Price Cross)", "presetRef": "wma_normal_trend_50" },
    { "name": "WMA 20 Pullback in WMA50 Uptrend", "presetRef": "wma_normal_pullback_20_50" },
    { "name": "WMA 200 Regime Filter", "presetRef": "wma_normal_filter_200" },
    { "name": "WMA Hero: Breakout + RSI Confirm", "presetRef": "wma_hero_breakout_rsi" },
    { "name": "WMA Hero: Momentum Stack (20/50/200)", "presetRef": "wma_hero_stack_momentum" },
    { "name": "WMA Hero: Pullback + MTF Align", "presetRef": "wma_hero_pullback_mtf" }
  ],
  "riskTemplates": {
    "atrStop": {
      "enabledDefault": false,
      "tooltip": "Places stop a multiple of ATR from entry.",
      "params": { "atrPeriod": 14, "atrMult": 1.6 }
    },
    "trailingTP": {
      "enabledDefault": false,
      "tooltip": "Locks in profits with a trailing take-profit.",
      "params": { "type": "percent", "percent": 0.9 }
    },
    "breakeven": {
      "enabledDefault": false,
      "tooltip": "Moves stop to entry after a defined unrealized gain.",
      "params": { "triggerPercent": 1.1, "offsetPercent": 0.05 }
    },
    "timeStop": {
      "enabledDefault": false,
      "tooltip": "Exits after a fixed number of bars.",
      "params": { "maxBars": 120 }
    }
  },
