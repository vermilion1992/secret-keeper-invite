{
  "identity": {
    "id": "sma",
    "label": "SMA (Simple Moving Average)",
    "category": "Trend",
    "tier": "CORE",
    "tags": ["Trend", "Moving Average", "Support/Resistance", "Filter"]
  },
  "docs": {
    "blurb": "The Simple Moving Average (SMA) smooths price by averaging the last N bars, helping visualize trend direction and dynamic support/resistance.",
    "longSummary": "SMA is calculated as the arithmetic mean of prices over a specified lookback. Rising SMAs often indicate uptrends, while falling SMAs suggest downtrends. Traders use price/MA crossovers, MA stacks (e.g., 20/50/200), and pullbacks to an SMA within a dominant trend. SMA can also serve as a higher-timeframe regime filter to avoid counter-trend trades.",
    "mathSummary": "SMAₙ(t) = (1/n) × Σ_{i=0}^{n-1} Price(t−i).",
    "references": [
      {
        "label": "Investopedia — Simple Moving Average (SMA)",
        "url": "https://www.investopedia.com/terms/s/sma.asp"
      }
    ]
  },
  "params": [
    {
      "key": "length",
      "label": "SMA Length",
      "type": "integer",
      "default": 50,
      "min": 2,
      "max": 500,
      "step": 1,
      "unit": "bars"
    },
    {
      "key": "source",
      "label": "Price Source",
      "type": "enum",
      "options": ["close", "open", "high", "low", "hl2", "hlc3", "ohlc4"],
      "default": "close"
    }
  ],
  "outputs": ["sma"],
  "supportedOperators": [">", ">=", "<", "<=", "==", "crosses_above", "crosses_below", "rising", "falling", "within", "outside"],
  "signals": [
    {
      "id": "price_above_sma",
      "label": "Price Above SMA",
      "when": [
        { "left": "price", "op": ">", "right": "sma" }
      ]
    },
    {
      "id": "bull_cross",
      "label": "Bullish Price Crosses Above SMA",
      "when": [
        { "left": "price", "op": "crosses_above", "right": "sma" }
      ]
    },
    {
      "id": "bear_cross",
      "label": "Bearish Price Crosses Below SMA",
      "when": [
        { "left": "price", "op": "crosses_below", "right": "sma" }
      ]
    }
  ],
  "ui": {
    "tooltips": {
      "_indicator": "SMA smooths price over a fixed window to reveal trend direction and dynamic support/resistance.",
      "length": "Number of bars to average. Longer = smoother but slower.",
      "source": "Which price series to average for the SMA."
    }
  },
  "constraints": {
    "recommendedTimeframes": ["5m", "15m", "1h", "4h", "1D"],
    "notes": "Shorter timeframes can be noisy; consider longer lengths or trend filters."
  },
  "examples": [
    { "name": "SMA 50 Trend-Follow (Price Cross)", "presetRef": "sma_normal_trend_50" },
    { "name": "SMA 20 Pullback in SMA50 Uptrend", "presetRef": "sma_normal_pullback_20_50" },
    { "name": "SMA 200 Regime Filter", "presetRef": "sma_normal_filter_200" },
    { "name": "SMA Hero: Breakout + RSI Confirm", "presetRef": "sma_hero_breakout_rsi" },
    { "name": "SMA Hero: Momentum Stack (20/50/200)", "presetRef": "sma_hero_stack_momentum" },
    { "name": "SMA Hero: Pullback + MTF Align", "presetRef": "sma_hero_pullback_mtf" }
  ],
  "riskTemplates": {
    "atrStop": {
      "enabledDefault": false,
      "tooltip": "Places stop a multiple of ATR from entry.",
      "params": {
        "atrPeriod": 14,
        "atrMult": 1.5
      }
    },
    "trailingTP": {
      "enabledDefault": false,
      "tooltip": "Locks in profits with a trailing take-profit.",
      "params": {
        "type": "percent",
        "percent": 0.8
      }
    },
    "breakeven": {
      "enabledDefault": false,
      "tooltip": "Moves stop to entry after a defined unrealized gain.",
      "params": {
        "triggerPercent": 1.0,
        "offsetPercent": 0.05
      }
    },
    "timeStop": {
      "enabledDefault": false,
      "tooltip": "Exits after a fixed number of bars.",
      "params": {
        "maxBars": 120
      }
    }
  },
