{
  "identity": {
    "id": "macd",
    "label": "MACD (Moving Average Convergence/Divergence)",
    "category": "Momentum",
    "tier": "CORE",
    "tags": ["Momentum", "Trend", "Oscillator", "Crossover", "Filter"]
  },
  "docs": {
    "blurb": "MACD tracks momentum by comparing two EMAs and smoothing the result with a signal line.",
    "longSummary": "MACD measures the distance between a fast and slow exponential moving average. A signal line (EMA of MACD) highlights turns, and the histogram displays the difference between MACD and its signal. Traders look for signal-line crossovers, zero-line crosses, and histogram inflections to time entries and exits. MACD can confirm trend direction with higher-timeframe filters or long MAs and is useful for spotting momentum acceleration and deceleration.",
    "mathSummary": "MACD = EMA(price, fast) − EMA(price, slow); Signal = EMA(MACD, signalLen); Histogram = MACD − Signal.",
    "references": [
      {
        "label": "Investopedia — Moving Average Convergence Divergence (MACD)",
        "url": "https://www.investopedia.com/terms/m/macd.asp"
      }
    ]
  },
  "params": [
    {
      "key": "fastLength",
      "label": "Fast EMA Length",
      "type": "integer",
      "default": 12,
      "min": 2,
      "max": 200,
      "step": 1,
      "unit": "bars"
    },
    {
      "key": "slowLength",
      "label": "Slow EMA Length",
      "type": "integer",
      "default": 26,
      "min": 3,
      "max": 300,
      "step": 1,
      "unit": "bars"
    },
    {
      "key": "signalLength",
      "label": "Signal EMA Length",
      "type": "integer",
      "default": 9,
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "bars"
    },
    {
      "key": "source",
      "label": "Price Source",
      "type": "enum",
      "options": ["close", "open", "high", "low", "hl2", "hlc3", "ohlc4"],
      "default": "close"
    },
    {
      "key": "maType",
      "label": "MA Type",
      "type": "enum",
      "options": ["ema"],
      "default": "ema"
    }
  ],
  "outputs": ["macd", "signal", "histogram"],
  "supportedOperators": [">", ">=", "<", "<=", "==", "crosses_above", "crosses_below", "rising", "falling", "within", "outside"],
  "signals": [
    {
      "id": "bull_signal_cross",
      "label": "MACD Crosses Above Signal",
      "when": [
        { "left": "macd", "op": "crosses_above", "right": "signal" }
      ]
    },
    {
      "id": "bear_signal_cross",
      "label": "MACD Crosses Below Signal",
      "when": [
        { "left": "macd", "op": "crosses_below", "right": "signal" }
      ]
    },
    {
      "id": "zero_line_bull",
      "label": "MACD Crosses Above Zero",
      "when": [
        { "left": "macd", "op": "crosses_above", "right": 0 }
      ]
    },
    {
      "id": "zero_line_bear",
      "label": "MACD Crosses Below Zero",
      "when": [
        { "left": "macd", "op": "crosses_below", "right": 0 }
      ]
    }
  ],
  "ui": {
    "tooltips": {
      "_indicator": "MACD compares two EMAs to gauge momentum; the signal line smooths MACD and the histogram shows their difference.",
      "fastLength": "Shorter EMA period (faster reaction).",
      "slowLength": "Longer EMA period (trend baseline).",
      "signalLength": "EMA applied to MACD line for crossover signals.",
      "source": "Price input for EMAs.",
      "maType": "Smoothing method (EMA for classic MACD)."
    }
  },
  "constraints": {
    "recommendedTimeframes": ["5m", "15m", "1h", "4h", "1D"],
    "notes": "Consider a trend/regime filter to avoid whipsaws in ranges."
  },
  "examples": [
    { "name": "MACD Classic (12/26/9) Signal Cross", "presetRef": "macd_normal_classic_12_26_9" },
