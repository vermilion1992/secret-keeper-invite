{
  "identity": {
    "id": "hma",
    "label": "HMA (Hull Moving Average)",
    "category": "Trend",
    "tier": "CORE",
    "tags": ["Trend", "Moving Average", "Support/Resistance", "Filter"]
  },
  "docs": {
    "blurb": "The Hull Moving Average (HMA) reduces lag while maintaining smoothness, reacting faster to trend changes than many traditional MAs.",
    "longSummary": "HMA uses a sequence of Weighted Moving Averages and a square-root length to create a smooth yet highly responsive trend line. It aims to minimize lag versus SMA/WMA while avoiding the noise of very short EMAs. Traders often use price/HMA crosses for trend-following, dual/stacked HMAs for regime confirmation, and HMA pullbacks within a dominant trend. HMA also works as a dynamic support/resistance guide and as a higher-timeframe bias filter.",
    "mathSummary": "HMA(L) = WMA( 2·WMA(price, L/2) − WMA(price, L), √L ).",
    "references": [
      {
        "label": "Investopedia — Moving Average (MA)",
        "url": "https://www.investopedia.com/terms/m/movingaverage.asp"
      }
    ]
  },
  "params": [
    {
      "key": "length",
      "label": "HMA Length",
      "type": "integer",
      "default": 55,
      "min": 2,
      "max": 500,
      "step": 1,
      "unit": "bars"
    },
    {
      "key": "source",
      "label": "Price Source",
      "type": "enum",
      "options": ["close", "open", "high", "low", "hl2", "hlc3", "ohlc4"],
      "default": "close"
    }
  ],
  "outputs": ["hma"],
  "supportedOperators": [">", ">=", "<", "<=", "==", "crosses_above", "crosses_below", "rising", "falling", "within", "outside"],
  "signals": [
    {
      "id": "bull_price_cross",
      "label": "Bullish Price Crosses Above HMA",
      "when": [
        { "left": "price", "op": "crosses_above", "right": "hma" }
      ]
    },
    {
      "id": "bear_price_cross",
      "label": "Bearish Price Crosses Below HMA",
      "when": [
        { "left": "price", "op": "crosses_below", "right": "hma" }
      ]
    }
  ],
  "ui": {
    "tooltips": {
      "_indicator": "HMA combines WMAs to reduce lag while remaining smooth, helping reveal trend shifts earlier.",
      "length": "Bars used to compute HMA (via WMAs and √length). Shorter = faster but noisier; longer = smoother.",
      "source": "Price input used to compute the HMA."
    }
  },
  "constraints": {
    "recommendedTimeframes": ["5m", "15m", "1h", "4h", "1D"],
    "notes": "In very volatile markets, consider longer lengths or add a secondary filter to reduce whipsaws."
  },
  "examples": [
    { "name": "HMA 55 Trend-Follow (Price Cross)", "presetRef": "hma_normal_trend_55" },
    { "name": "HMA 21 Pullback in HMA55 Uptrend", "presetRef": "hma_normal_pullback_21_55" },
